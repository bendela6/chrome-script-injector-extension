{
  "manifest_version": 3,
  "name": "My Custom Script Injector",
  "description": "Injects a custom script into web pages.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "32": "icon.png",
    "64": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "script.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval';"
  }
}

